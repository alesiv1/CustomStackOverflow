@model IEnumerable<WebApp.Data.Entities.QuestionEntity>

@{
    ViewData["Title"] = "Index";
}

<h1>Questions</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>

                <p>Votes: @item.Visitors.Where(x => x.IsVotes).Count()</p>
                <p>Answers: @Html.DisplayFor(modelItem => item.Answers.Count)</p>
                <p>Views: @Html.DisplayFor(modelItem => item.Views)</p>
            </td>
            <td>
                <p>
                    <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
                </p>
                <p></p>
                <p>
                    <a>@Html.DisplayFor(modelItem => item.Author)</a> |
                    <a>@Html.DisplayFor(modelItem => item.Created)</a>
                </p>
            <td>
                <p></p>
                <p>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </p>                
                <p></p>
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<WebApp.Data.Entities.AnswerEntity>

@{
    ViewData["Title"] = "Index";
}

<h1>Answers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <p>Votes: @item.Visitors.Where(x => x.IsVotes).Count()</p>
            </td>
            <td>
                <p>
                    <a>@Html.DisplayFor(modelItem => item.Content)</a>
                </p>
                <p>
                    <a>@Html.DisplayFor(modelItem => item.Author)</a> |
                    <a>@Html.DisplayFor(modelItem => item.Created)</a>
                </p>
            <td>
                <p></p>
                <p>
                    <a asp-action="Edit" asp-controller="Answers" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-controller="Answers" asp-route-id="@item.Id">Delete</a>
                </p>
                <p></p>
            </td>
        </tr>
}
    </tbody>
</table>
